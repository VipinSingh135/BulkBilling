<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp"
    android:layout_margin="@dimen/_8sdp"
    android:background="@drawable/bg_curved_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout android:id="@+id/relativeProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">


        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/_54sdp"
            android:layout_height="@dimen/_54sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:src="@drawable/user" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgProfile"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_toRightOf="@+id/imgProfile"
            android:fontFamily="@font/raleway_bold"
            android:text="Dr. John Wright"
            android:textColor="@color/colorGreyDarker"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tvQualifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_below="@+id/tvName"
            android:fontFamily="@font/raleway_medium"
            android:text="B.A.M.S ,M.B.B.S"
            android:textColor="@color/colorGreyDark"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_curved_yellow"
            android:text="Exp:- 10Yrs"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/raleway_medium"
            android:textAllCaps="false"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingRight="@dimen/_6sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:textColor="@color/colorTextGreen"
            />

        <LinearLayout
            android:id="@+id/linearStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/imgProfile"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_below="@id/tvQualifications"
            android:layout_marginTop="@dimen/_6sdp">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_4sdp"
                android:src="@drawable/star_small_selected" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:src="@drawable/star_small_selected" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:src="@drawable/star_small_selected" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:src="@drawable/star_small_normal" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:src="@drawable/star_small_normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvSpecialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_toRightOf="@+id/imgProfile"
            android:layout_below="@+id/linearStar"
            android:fontFamily="@font/raleway_medium"
            android:text="Specialist in Medicos, Therapy"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="@color/colorGreyDark"
            android:textSize="@dimen/_12sdp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@color/colorGrey"
            android:layout_below="@+id/tvSpecialization"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/raleway_medium"
            android:text="999 Drummond Street,Newark,New Jersy"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="@color/colorGreyDark"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>